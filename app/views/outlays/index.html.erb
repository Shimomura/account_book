<p id="notice"><%= notice %></p>

<h1>Outlays</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Date</th>
      <th>Category</th>
      <th>Wallet</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @outlays.each do |outlay| %>
      <tr>
        <td><%= outlay.amount %></td>
        <td><%= outlay.date %></td>
        <td><%= outlay.category_id %></td>
        <td><%= outlay.wallet_id %></td>
        <td><%= outlay.memo %></td>
        <td><%= link_to 'Show', outlay %></td>
        <td><%= link_to 'Edit', edit_outlay_path(outlay) %></td>
        <td><%= link_to 'Destroy', outlay, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Outlay', new_outlay_path %>
