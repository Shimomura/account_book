<p id="notice"><%= notice %></p>

<h1>Categries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categries.each do |categry| %>
      <tr>
        <td><%= categry.name %></td>
        <td><%= link_to 'Show', categry %></td>
        <td><%= link_to 'Edit', edit_categry_path(categry) %></td>
        <td><%= link_to 'Destroy', categry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Categry', new_categry_path %>
