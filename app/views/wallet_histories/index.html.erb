<p id="notice"><%= notice %></p>

<h1>Wallet Histories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wallet_histories.each do |wallet_history| %>
      <tr>
        <td><%= wallet_history.name %></td>
        <td><%= wallet_history.amount %></td>
        <td><%= link_to 'Show', wallet_history %></td>
        <td><%= link_to 'Edit', edit_wallet_history_path(wallet_history) %></td>
        <td><%= link_to 'Destroy', wallet_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wallet History', new_wallet_history_path %>
